<div class="navbar">
  <h1>Earthbnb</h1>
  <%= link_to "Add Flat", new_flat_path, class: "btn add-flat-btn" %>
</div>

<div class="container">
  <div class="cards-container">
    <% @flats.each do |flat| %>
      <div class="flat">
        <h2><%= flat.name %></h2>
        <p><%= flat.description %></p>
        <p><strong>Address:</strong> <%= flat.address %></p>
        <p><strong><i class="fa-solid fa-euro-sign"></i> </strong><%= flat.price_per_night %></p>
        <p><strong><i class="fa-solid fa-person"></i></strong> <%= flat.number_of_guests %></p>
        <div class="info">
        <%= link_to "More Info", flat_path(flat) %>
        <%= link_to "Edit", edit_flat_path(flat) %>
        <%= link_to "Remove", flat_path(flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn delete-flat-btn" %>
      </div>
      </div>
 
    <% end %>
  </div>
</div>